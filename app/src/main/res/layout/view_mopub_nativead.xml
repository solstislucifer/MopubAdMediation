<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mopub_nativeAd_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id='@+id/native_ad_main_image'
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id='@+id/native_ad_icon_image'
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_ad_main_image"
            />
        <TextView
            android:id='@+id/native_ad_title'
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/native_ad_icon_image"
            app:layout_constraintTop_toBottomOf="@id/native_ad_main_image"
            />
        <TextView
            android:id='@+id/native_ad_text'
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/native_ad_title"
            app:layout_constraintStart_toStartOf="@id/native_ad_title"
            />
        <ImageView
            android:id='@+id/native_ad_privacy_information_icon_image'
            android:layout_width='40dp'
            android:layout_height='40dp'
            android:padding='10dp'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id='@+id/native_sponsored_text_view'
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/native_ad_text"
            app:layout_constraintStart_toStartOf="@id/native_ad_text"
            />
        <Button
            android:id="@+id/native_cta_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>